      <h2><%= pluralize(map_point.errors.count, "error") %> prohibited this map_point from being saved:</h2>

      <ul>
        <% map_point.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <% form.label :country, style: "display: block" %>
    <%= form.text_field :country, class:"form-control", placeholder:"Country" %>
